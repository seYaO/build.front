<view class="sList" wx:if="{{list}}">
    <view class="sCard" wx:for="{{list}}" wx:key="index">
        <view class="header">
            <view class="thumb">
                <view class="image">
                    <image class="image_img" src="{{item.headerImg || imgUrl}}"></image>
                </view>
            </view>
            <view class="content">
                <view class="title">{{item.title}}</view>
                <view class="desc ellipsis" wx:if="{{item.introduction}}">{{item.introduction}}</view>
                <view wx:if="{{false}}">
                    <view class="tag tag--plain hairline--surround">标签</view>
                    <view class="tag tag--plain hairline--surround">标签</view>
                </view>
            </view>
        </view>
        <view class="footer">
            <view class="btn" data-value="{{item.cloudDownload}}" bindtap="getClipboard">
                <text>存</text>
            </view>
        </view>
    </view>
</view>

<van-toast id="van-toast" />
 