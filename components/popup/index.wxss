.v-popup {
    visibility: hidden
}

.v-popup--show {
    visibility: visible
}

.v-popup__mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    background: rgba(0, 0, 0, .7);
    display: none
}

.v-popup__container {
    position: fixed;
    left: 50%;
    top: 50%;
    background: #fff;
    transform: translate3d(-50%, -50%, 0);
    transform-origin: center;
    transition: all .4s ease;
    z-index: 10000;
    opacity: 0
}

.v-popup--show .v-popup__container {
    opacity: 1
}

.v-popup--show .v-popup__mask {
    display: block
}

.v-popup--left .v-popup__container {
    left: 0;
    top: auto;
    transform: translate3d(-100%, 0, 0)
}

.v-popup--show.v-popup--left .v-popup__container {
    transform: translate3d(0, 0, 0)
}

.v-popup--right .v-popup__container {
    right: 0;
    top: auto;
    left: auto;
    transform: translate3d(100%, 0, 0)
}

.v-popup--show.v-popup--right .v-popup__container {
    transform: translate3d(0, 0, 0)
}

.v-popup--bottom .v-popup__container {
    top: auto;
    left: auto;
    bottom: 0;
    transform: translate3d(0, 100%, 0)
}

.v-popup--show.v-popup--bottom .v-popup__container {
    transform: translate3d(0, 0, 0)
}

.v-popup--top .v-popup__container {
    top: 0;
    left: auto;
    transform: translate3d(0, -100%, 0)
}

.v-popup--show.v-popup--top .v-popup__container {
    transform: translate3d(0, 0, 0)
}