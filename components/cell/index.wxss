.v-cell {
    position: relative;
    padding: 12px 15px;
    display: flex;
    align-items: center;
    line-height: 1.4;
    font-size: 14px
}

.v-cell::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    transform: scale(.5);
    transform-origin: 0 0;
    pointer-events: none;
    box-sizing: border-box;
    border: 0 solid #e5e5e5;
    border-bottom-width: 1px;
    left: 15px;
    right: 0
}

.v-cell__icon {
    margin-right: 5px
}

.v-cell__img {
    width: 60px;
    height: 60px;
    border-radius: 30px;
}

.v-cell__img2 {
    width: 40px;
    height: 40px;
    border-radius: 20px;
}

.v-cell__bd {
    flex: 1
}

.v-cell__text {
    line-height: 24px;
    font-size: 14px
}

.v-cell__desc {
    line-height: 1.2;
    font-size: 12px;
    color: #666
}

.v-cell__ft {
    position: relative;
    text-align: right;
    color: #666
}

.v-cell__no-pading {
    padding: 0
}

.v-cell__no-pading .v-cell__bd_padding {
    padding: 12px 0 12px 15px
}

.v-cell__no-pading .v-cell__bd_padding .v-form__input {
    height: 26px
}

.v-cell__no-pading .v-cell__ft_padding {
    padding: 12px 15px 12px 0
}

.v-cell--last-child::after,
.v-cell:last-child::after {
    display: none
}

.v-cell--access .v-cell__ft {
    padding-right: 13px
}

.v-cell--access .v-cell__ft::after {
    position: absolute;
    top: 50%;
    right: 2px;
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #c8c8c8;
    border-style: solid;
    transform: translateY(-50%) matrix(.71, .71, -.71, .71, 0, 0)
}

.v-cell--switch {
    padding-top: 6px;
    padding-bottom: 6px
}