
{{var value = it.CommentSummary,list = it.CommentList[0];}}
<a class="part-head J_hide_show border-bottom"  href="/localfun/wanle/comment_{{=list.lineId}}.html?wvc1=1&wvc2=1">
    <h3><em class="satisfaction"></em>{{=value.ManYiDu}}%满意
    <span class="comm-num">{{=value.TotalCount}}条点评</span></h3>
    <i class="jump"></i>
</a>
<div class="comm-detail">
    <h4>
        <img src="{{=list.UserImage}}">
        <span class="tel">{{=list.Creator}}
            <i class="level level{{=list.UserLeavel}}"></i>
        </span>
        <span class="time">{{=list.DPTime.split(" ")[0]}}</span>
    </h4>
    <p class="info">{{=list.Content}}</p>
    {{?list.imageCount == 0}}
        <ul class="image-line clearfix" data-index="0"></ul>
    {{??}}
        <ul class="image-line clearfix" data-index="0">
            {{? typeof(list.ImageList) == "string"}}
                {{var imgs = list.ImageList.split(",");}}
            {{??}}
                {{var imgs = list.ImageList;}}
            {{?}}
            {{?imgs.length > 4}}
                {{~imgs:img:index}}
                 {{?index < 3}}
                     <li><img data-pos="{{=index}}" src="{{=img}}" data-length={{=imgs.length}} data-key="imageView" data-context="#imageViewPage"></li>
                 {{?}}
                {{~}}
            <li class="image-amount" data-key="initImageList" data-context="#initImageListPage">
                <p>
                    <span>共{{=imgs.length}}张</span>
                </p>
            </li>
            {{??}}
                {{~imgs:img:index}}
                       <li><img data-pos="{{=index}}" src="{{=img}}" data-length={{=imgs.length}} data-key="imageView" data-context="#imageViewPage"></li>
                {{~}}
            {{?}}

        </ul>
    {{?}}
</div>
