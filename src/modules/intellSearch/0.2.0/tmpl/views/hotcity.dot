<div class="hotcity">
    <div class="hotcity_gp">
        <div class="g_header">
            热门搜索
        </div>
        <div class="g_list">
            {{~it:item}}
            {{var _city = item.city;var _visa = item.visa;}}
            <span class="g_item" trace="{{=_city}}" title="{{=_city}}" data-value="{{=_city}}" hotcity-item>
                <em>{{=_city}}</em>
                <b class="{{=_visa === "1" ? "visa-free" : (_visa === "2" && "visa-land")}}"></b>
            </span>
            {{~}}
        </div>
    </div>
</div>
